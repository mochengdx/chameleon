{
  "name": "chameleon",
  "version": "1.0.0",
  "description": "Chameleon is a flexible and highly extensible 3D rendering and interaction framework designed to work seamlessly across various WebGL engines, including Three.js, Galacean, and more. It provides a modular pipeline that allows developers to load, render, and interact with 3D models efficiently, while also enabling custom extensions and interactions.",
  "main": "index.js",
  "scripts": {
    "dev:examples": "pnpm -w --filter \"packages/examples\" dev",
    "dev:devtools": "pnpm -w --filter \"packages/devtools\" dev",
    "build": "pnpm -w run build",
    "build:types": "pnpm -w run build:types",
    "build:core": "pnpm -w -r build",
    "test": "pnpm -w -r test",
    "lint": "eslint packages/** --ext .js,.ts,.tsx,.json --ignore-pattern node_modules/*",
    "lint:fix": "eslint packages/** --ext .js,.ts,.tsx,.json --ignore-pattern node_modules/* --fix",
    "prepare": "husky install",
    "clean": "pnpm -w run clean"
  },
  "keywords": [
    "3D",
    "WebGL",
    "Three.js",
    "Galacean",
    "Rendering",
    "Interaction",
    "Framework",
    "Modular",
    "Pipeline",
    "Extensions"
  ],
  "author": "Daoxing.Huang <",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.37.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "rollup": "^4.52.4",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.9.3",
    "vitest": "^0.32.4",
    "zustand": "^4.5.0"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.js": "eslint --fix",
    "*.json": "prettier --write"
  },
  "dependencies": {
    "rimraf": "^5.0.10",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.8.1"
  }
}
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "skipDefaultLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "baseUrl": "./",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "types",
    "packages/*/tests"
  ],
  "include": [
    "src/**/*"
  ]
}
{
  "name": "@chameleon/plugins",
  "version": "1.0.1",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "clean": "rimraf dist node_modules/.cache/plugins.tsbuildinfo",
    "build": "pnpm run clean && tsc -b",
    "build:watch": "tsc -b -w",
    "dev": "ts-node-dev --respawn --transpile-only --prefer-ts-exts src/index.ts",
    "test": "vitest run --passWithNoTests",
    "lint": "eslint 'src/**/*.{ts,tsx,js}' --fix",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist/**/*",
    "types/**/*"
  ],
  "dependencies": {
    "@chameleon/core": "workspace:*",
    "@chameleon/adapters": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@galacean/engine": "^1.6.6",
    "@galacean/engine-toolkit": "^1.6.0"
  }
}
